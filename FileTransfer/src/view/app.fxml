<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXListView?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.app">
   <center>
      <JFXListView fx:id="seedingFile" BorderPane.alignment="CENTER" />
   </center>
   <top>
      <BorderPane BorderPane.alignment="CENTER">
         <center>
            <JFXTextField fx:id="requestField" promptText="Request file..." BorderPane.alignment="CENTER" />
         </center>
         <right>
            <JFXButton fx:id="btnSend" onAction="#sender_Enter" text="Request" BorderPane.alignment="CENTER" />
         </right>
      </BorderPane>
   </top>
   <bottom>
      <JFXButton fx:id="btnSeed" alignment="CENTER" buttonType="RAISED" contentDisplay="CENTER" onAction="#seed_Enter" text="Reload folder seeding file..." BorderPane.alignment="CENTER" />
   </bottom>
</BorderPane>
